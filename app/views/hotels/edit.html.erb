<h2>Edit the Hotel</h2>

<%= form_for @hotel do |f| %>
<%#= f.error_notification %>
<div class="signup">
  <div class="signup_fields">
    <div class="form-inputs">
      <%= f.input :name,
                  required: true,
                  autofocus: true %>
      <%= f.input :country_code,
                  required: true,
                  as: :search,
                  placeholder: 'Which country is the hotel in?' %>
                     autofocus: true %>
      <%= f.input :description,
                  required: true,
                  as: :search,
                  placeholder: 'Describe the hotel property...' %>
    </div>
  </div>
</div>

<% end %>
