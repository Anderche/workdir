<h1>Edit a Hotel</h1>

<h3>Edit the details here:</h3>

<div>
  <%= form_for(@hotel) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :country_code %>
    <%= f.text_field :country_code %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.submit %>
  <% end %>
</div>