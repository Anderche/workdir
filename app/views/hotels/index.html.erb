<div class="container">
	<h1>Hotels</h1>

	<h3>View all of our hotel properties</h3>

	<div class="body">	
	  <ul>
			<% @hotels.each do |hotel| %>
				<li> 
					<%= hotel.name %> 
					<%= link_to "View", hotel_path(hotel) %>
					<%= link_to "Remove Hotel", hotel_path(hotel), method: :delete %>
				</li>
			<% end %>
		</ul>
		
		<%= link_to new_hotel_path do  %>
				<button type="button" class="btn btn-primary">Add a Hotel</button>
		<% end %>
	</div>

	<div>
		<h6>
		<%= link_to "Signup", new_user_registration_path %>
		</h6>

		<h6>
		<%= link_to "Sign-in", new_user_session_path %>
		</h6>
	</div>
</div>